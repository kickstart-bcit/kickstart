<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Staff - Rewards</title>
    <link href='/style.css' rel='stylesheet' type='text/css' />
    <link href='/staff.css' rel='stylesheet' type='text/css' />
</head>

<body>
    {{> staffNav}}

    <div id="contentDiv">
        <h2>Staff Rewards Page</h2>
        <div id="studentDisplay">

            <div id="studentDisplayFormDiv">
                <form action="/staff/rewards/student" method="post">
                    <label for="studentIdInput">Student ID</label>
                    <input type="text" name="studentIdInput" id="studentIdInput" placeholder="Enter Student Number"
                        required>
                    <input type="submit" value="Submit">
                </form>
                <p class="errMsg">{{statusMsg}}</p>
            </div>
            <div id="studentInfo">
                <p class="studentInfoText"><span>ID:</span>{{studentId}}</p>
                <p class="studentInfoText"><span>Name: </span>{{studentName}}</p>
                <p class="studentInfoText"><span>Points: </span>{{studentPoints}}</p>
            </div>
            
        </div>
        <div id="dataDiv">
            <h2>Rewards</h2>
            <div id="listDiv">
                {{#each rewards}}<div>
                    <p><span>Title: </span>{{this.rewards_title}} <span>Points:
                        </span>{{this.rewards_points}}<button onclick="redeem({{studentId}},{{this.rewards_id}})">Redeem</button></p>
                </div>{{/each}}
            </div>
        </div>
    </div>

<script>

    const redeem = (sid, rid)=> {
        fetch()
    }
</script>

</body>

</html>